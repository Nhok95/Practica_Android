<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_row="0"
        android:layout_column="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/abc_btn_borderless_material">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/abc_btn_borderless_material">

            <TextView
                android:layout_height="match_parent"
                android:id="@+id/txtRowTitle"
                android:text="Titulo"
                android:layout_width="match_parent"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title"
                android:textAlignment="inherit"
                android:layout_marginLeft="@dimen/abc_action_bar_stacked_max_height"
                android:layout_marginRight="@dimen/abc_action_bar_stacked_max_height"
                android:layout_margin="@dimen/abc_action_bar_overflow_padding_start_material"
                android:textSize="24sp" />



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">

            <TextView
                android:text="Director :"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:layout_width="150dp" />

            <TextView
                android:id="@+id/txtRowDesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Director"
                android:layout_below="@+id/txtRowTitle"
                android:layout_alignParentStart="true"
                android:fontFamily="sans-serif"
                android:textStyle="normal|bold|italic"
                android:layout_weight="1" />
        </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">

                <TextView
                    android:text="Año : "
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:layout_width="80dp" />

                <TextView
                    android:text="Año"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/year"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">

                <TextView
                    android:text="Protagonista : "
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:layout_width="210dp" />

                <TextView
                    android:text="actor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/actor"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">

                <TextView
                    android:text="País : "
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:layout_width="80dp" />

                <TextView
                    android:text="pais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/País"
                    android:layout_weight="1" />
            </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">

            <TextView
                android:text="Valoración : "
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:layout_width="170dp" />

            <TextView
                android:text="not"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nota"
                android:layout_weight="1" />
        </LinearLayout>
        </LinearLayout>




</GridLayout>